<% layout('layouts/boilerplate.ejs') %>

<body>
<h1>All Listings</h1>

<div class="row row-cols-lg-4 row-cols-md-2 row-col-sm-1">
    <% for (let listing of allListings) { %> 
        <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url ? listing.image.url : listing.image  %>" 
                class="card-img-top" 
                alt="Listing Image" 
                style="height:20rem" 
                >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        Price: <%= (listing.price ? listing.price.toLocaleString('en-IN') : 'N/A') %> / night
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

</body>